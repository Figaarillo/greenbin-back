{
  "name": "noderplate",
  "version": "0.0.0",
  "description": "noderpalte is a boilerplate for nodejs projects",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm run build && node dist/main.js",
    "dev": "nodemon -x ts-node ./src/main.ts",
    "test": "NODE_ENV=test vitest",
    "clean": "rimraf dist && rimraf .tsbuildinfo",
    "tsc": "tsc",
    "build": "pnpm run clean && pnpm run tsc",
    "lint": "eslint --ext .ts src",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "pnpm run lint --fix",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install",
    "pre-check": "pnpm run ts-check && pnpm run prettier && pnpm run lint",
    "pre-commit": "lint-staged",
    "typeorm": "typeorm-ts-node-commonjs",
    "mikro-orm": "mikro-orm",
    "migration:initial": "pnpm run mikro-orm migration:create --initial",
    "migration:create": "pnpm run mikro-orm migration:create",
    "migration:up": "pnpm run mikro-orm migration:up"
  },
  "keywords": [],
  "author": "Figarillo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@mikro-orm/cli": "6.3.0",
    "@types/bcrypt": "5.0.2",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.10.5",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.0",
    "lint-staged": "15.2.0",
    "nodemon": "3.1.4",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "vitest": "2.0.5"
  },
  "dependencies": {
    "@fastify/cors": "9.0.1",
    "@mikro-orm/core": "6.3.0",
    "@mikro-orm/migrations": "6.3.0",
    "@mikro-orm/postgresql": "6.3.0",
    "@mikro-orm/reflection": "6.3.0",
    "argon2": "0.40.3",
    "bcrypt": "5.1.1",
    "dotenv": "16.3.1",
    "fastify": "4.28.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.5",
    "uuid": "9.0.1",
    "zod": "3.22.4"
  },
  "mikro-orm": {
    "useTsNode": true
  }
}
