{
  "name": "noderplate",
  "version": "0.0.0",
  "description": "noderpalte is a boilerplate for nodejs projects",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm run build && node dist/main.js",
    "dev": "nodemon -x ts-node ./src/main.ts",
    "test": "NODE_ENV=test pnpm run start:dev",
    "clean": "rimraf dist && rimraf .tsbuildinfo",
    "tsc": "tsc",
    "tsc-alias": "tsc-alias",
    "build": "pnpm run clean && pnpm run tsc && pnpm run tsc-alias",
    "lint": "eslint --ext .ts src",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "lint:fix": "pnpm run lint --fix",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "prepare": "husky install",
    "pre-check": "pnpm run ts-check && pnpm run prettier && pnpm run lint",
    "pre-commit": "lint-staged",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "pnpm run typeorm migration:generate ./migrations/migration -d ./src/shared/config/typeorm.config.ts",
    "migration:run": "pnpm run typeorm migration:run -d ./src/shared/config/typeorm.config.ts",
    "migration:revert": "pnpm run typeorm migration:revert --config ./src/config/ormconfig.ts"
  },
  "keywords": [],
  "author": "Figarillo",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@types/bcrypt": "5.0.2",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.10.5",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "43.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "fastify": "4.28.0",
    "husky": "^8.0.0",
    "lint-staged": "15.2.0",
    "module-alias": "^2.2.3",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.8",
    "typescript": "5.3.3",
    "uuid": "9.0.1"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "dotenv": "16.3.1",
    "immutable": "5.0.0-beta.4",
    "pg": "8.12.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.5",
    "typeorm": "0.3.20",
    "typeorm-naming-strategies": "4.1.0",
    "zod": "3.22.4"
  },
  "_moduleAliases": {
    "@shared": "./src/shared",
    "@user": "./src/user"
  }
}
